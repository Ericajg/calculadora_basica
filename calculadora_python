from tkinter import Tk,Entry,Button
ventana=Tk()
ventana.configure(background="#f17a0a")
ventana.title("Calculadora Python")
ventana.geometry("300x350")
ventana.resizable(0,0)

datos=Entry(ventana, font=("Arial", 20), bg="#f17a0a", fg="white", bd=0, justify="right")
dtos.grid(row=0, column=0, columnspan=4, padx=10, pady=10)

ventana.mainloop()